{
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.5.2"
      }
    },
    "routes": [
        { "src": "/ini", "dest": "/api/php.ini" },
        { "src": "/autoload", "dest": "/vendor/autoload.php" },
        { "src": "/(.*)",  "dest": "/api/index.php" }
    ],
    "build": {
        "env": {
          "NOW_PHP_DEBUG": "1"
        }
      }
  }